{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"ignore": [
			".next/**",
			"node_modules/**",
			"pnpm-lock.yaml",
			".env*",
			"*.lock",
			"*.log",
			"public/**",
			"out/**",
			".vercel/**",
			"coverage/**",
			"dist/**",
			"graphql-env.d.ts"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error"
			},
			"performance": {
				"noDelete": "warn"
			},
			"suspicious": {
				"noExplicitAny": "warn"
			}
		}
	}
}
